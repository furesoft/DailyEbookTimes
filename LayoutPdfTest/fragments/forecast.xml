<forecastStrip flexdirection="row" justifycontent="spacebetween" alignitems="center" background="lightblue" >
    <forecastItem name="today" flexdirection="column" flexgrow="1" background="#FFFAE5" bordercolor="gray" boxshadow="gray 1">
        <text id="day" fontsize="14" fontfamily="NoticiaText" margin="3" color="black" fontweight="bold" alignself="center" autosize="true">Today</text>
        <img id="icon" src="file://images/icons/forecast/sunny.png" width="30" height="30" alignself="center" margin="2" />

        <precipitation margin="5" flexdirection="row" justifycontent="spacebetween" alignitems="center">
            <img src="file://images/icons/forecast/info/precipitation.png" width="8" height="8" alignself="flexstart" />
            <text name="value" fontsize="7" fontfamily="NoticiaText" autosize="true" alignself="flexend">90 % | 0,6 l/m²</text>
        </precipitation>

        <wind margin="5" flexdirection="row" justifycontent="spacebetween" alignitems="center">
            <img src="file://images/icons/forecast/info/wind.png" width="8" height="8" alignself="flexstart" />
            <text name="value" fontsize="7" fontfamily="NoticiaText" autosize="true" alignself="flexend">W 11 km/h</text>
        </wind>

        <humidity margin="5" flexdirection="row" justifycontent="spacebetween" alignitems="center">
            <img src="file://images/icons/forecast/info/humidity.png" width="8" height="8" alignself="flexstart" />
            <text name="value" fontsize="7" fontfamily="NoticiaText" autosize="true" alignself="flexend">68 %</text>
        </humidity>

        <pressure margin="5" flexdirection="row" justifycontent="spacebetween" alignitems="center">
            <img src="file://images/icons/forecast/info/pressure.png" width="8" height="8" alignself="flexstart" />
            <text name="value" fontsize="7" fontfamily="NoticiaText" autosize="true" alignself="flexend">1000 hPa</text>
        </pressure>
    </forecastItem>
</forecastStrip>