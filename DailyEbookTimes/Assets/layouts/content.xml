<layout device="rmpp" background="creme" isLandscape="true" debug="true" margin="5">
    <header name="header" height="20" margintop="2" marginleft="10" marginright="10" gap="5">
        <section name="headerInfo" flexdirection="row" alignitems="center">
            <text fontfamily="Jaini" fontsize="10" autosize="true" flexgrow="1" alignself="flexstart">Daily E-Book Times</text>
            <text fontfamily="Jaini" fontsize="10" autosize="true" flexgrow="0" alignself="flexend" datasource="meta" meta="creation-date">Thursday, April 15, 2025</text>
        </section>

        <hr />
    </header>

    <content flexdirection="column" flexGrow="1" margin="10" marginbottom="1">
        <container datasource="xkcd" />
        <container datasource="joke" />
        <container datasource="tiobe" />
    </content>

    <footer height="10" marginbottom="10" margintop="5" marginleft="10" marginright="10" display="flex" flexdirection="row" justifyContent="spacebetween">
        <text id="footerText" fontsize="7" fontfamily="NoticiaText" autosize="true" flexgrow="0">Generated with Totletheyn on Moss</text>
        <text id="page" fontSize="7" fontfamily="NoticiaText" autosize="true" flexgrow="0" datasource="meta" meta="page">Page {0}</text>
    </footer>
</layout>